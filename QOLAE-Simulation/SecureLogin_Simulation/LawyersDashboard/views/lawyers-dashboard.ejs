        }

        .modal-overlay iframe {
            max-width: 100% !important;
            max-height: 100% !important;
            border: none !important;
        }

        @media (max-width: 768px) {
            .workflow-grid {
                grid-template-columns: 1fr;
            }

            .header-top {
                flex-direction: column;
                gap: 20px;
                text-align: center;
            }

            .workflow-steps {
                flex-direction: column;
                gap: 20px;
            }

            .workflow-steps::before {
                display: none;
            }

            .footer-content {
                flex-direction: column;
                text-align: center;
            }

            .logo-section h1 img {
                height: 5rem;
                max-width: 380px;
            }

            .tagline {
                font-size: 1rem;
            }
        }

        @media (max-width: 480px) {
            .logo-section h1 img {
                height: 4.5rem;
                max-width: 320px;
            }

            .tagline {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
