    // REGISTER NEW STARTER
    async function registerNewStarter(event) {
      event.preventDefault();

      // Get form data
      const formData = {
        firstName: document.getElementById('newStarterFirstName').value.trim(),
        lastName: document.getElementById('newStarterLastName').value.trim(),
        email: document.getElementById('newStarterEmail').value.trim(),
        phone: document.getElementById('newStarterPhone').value.trim(),
        role: document.getElementById('newStarterRole').value,
        department: document.getElementById('newStarterDepartment').value.trim(),
        startDate: document.getElementById('newStarterStartDate').value,
        createdBy: 'Liz' // TODO: Get from session
      };

      // Validation
      if (!formData.firstName || !formData.lastName || !formData.email || !formData.role) {
        showNewStarterError('Please fill in all required fields (marked with *)');
        return;
      }

      // Email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(formData.email)) {
        showNewStarterError('Please enter a valid email address');
        return;
      }

      try {
        // Show loading state
        const submitBtn = document.querySelector('#newStarterRegistrationForm button[type="submit"]');
        const originalText = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = 'Registering...';

        // Call API
        const response = await fetch('/api/new-starter/create', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
        });

        const result = await response.json();

        if (result.success) {
          // Show success message with PIN
          showNewStarterSuccess(result.data.pin, result.data.name, result.data.email);

          // Reset form
          document.getElementById('newStarterRegistrationForm').reset();

          // Refresh pending list
          loadPendingNewStarters();
        } else {
          showNewStarterError(result.error || 'Failed to register new starter');
        }

        // Restore button
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;

      } catch (error) {
        console.error('Error registering new starter:', error);
        showNewStarterError('Network error. Please try again.');

        // Restore button
        const submitBtn = document.querySelector('#newStarterRegistrationForm button[type="submit"]');
        submitBtn.disabled = false;
        submitBtn.innerHTML = 'Register New Starter';
      }
    }

    // Show success message
    function showNewStarterSuccess(pin, name, email) {
      const successDiv = document.getElementById('newStarterSuccessMessage');
      const nameSpan = document.getElementById('registeredName');
      const pinSpan = document.getElementById('generatedPIN');
      const emailSpan = document.getElementById('registeredEmail');

      nameSpan.textContent = name;
      pinSpan.textContent = pin;
      emailSpan.textContent = email;
      successDiv.style.display = 'block';

      // Hide error message
      document.getElementById('newStarterErrorMessage').style.display = 'none';

      // Auto-hide after 10 seconds
      setTimeout(() => {
        successDiv.style.display = 'none';
      }, 10000);
    }

    // Show error message
    function showNewStarterError(message) {
      const errorDiv = document.getElementById('newStarterErrorMessage');
      const errorText = document.getElementById('errorMessageText');

      errorText.textContent = message;
      errorDiv.style.display = 'block';

      // Hide success message
